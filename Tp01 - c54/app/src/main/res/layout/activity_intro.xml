<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/introLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#B62020"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Intro">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tp1logo2"
        tools:src="@drawable/tp1logo2"
        tools:srcCompat="@drawable/tp1logo2" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="MUSIC PLAYER!!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonArtistes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#C61E1E"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="ARTISTES"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonChansons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#C61E1E"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="Chansons"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#C61E1E"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="Aller au lecteur MP3"
        android:textSize="24sp" />
</LinearLayout>